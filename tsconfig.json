{
	"include": ["src"],
	"exclude": ["node_modules"],
	"compilerOptions": {
		"lib": ["esnext"],
		"target": "esnext",
		"module": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"baseUrl": "./",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"pretty": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"types": ["node"]
	}
}
